@using Microsoft.AspNetCore.Mvc.Localization;
@using Collectors.Models;
@using Collectors.Classes;
@using Markdig;
@inject IViewLocalizer Localizer;
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@model ItemsListViewModel
@{
    IFieldManager manager;
}
<form method="post">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">@Localizer["Manage items"]</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            @{
                <input asp-for="CollectionId" value="@Model.CollectionId" type="hidden" />
                for (int i = 0; i < Model.AdditionalFieldsIndexes.Count; i++)
                {
                    <input asp-for="AdditionalFieldsIndexes[i]" value="@Model.AdditionalFieldsIndexes[i]" type="hidden" />
                    <input asp-for="AdditionalFieldsNames[i]" value="@Model.AdditionalFieldsNames[i]" type="hidden" />
                }
            }
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <button id="editButton" asp-action="Edit" type="submit">
                        <img src="~/bootstrap-icons/icons/pencil-fill.svg" />
                        <span class="sr-only">(current)</span>
                    </button>
                </li>
                <li class="nav-item active">
                    <button asp-action="Delete" type="submit">
                        <img src="~/bootstrap-icons/icons/trash-fill.svg" />
                        <span class="sr-only">(current)</span>
                    </button>
                </li>
                <li class="nav-item active">
                    <button class="nav-item" asp-action="Add" type="submit">
                        <img src="~/bootstrap-icons/icons/plus.svg" />
                        <span class="sr-only">(current)</span>
                    </button>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                       role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @Localizer["Order by"]
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">@SharedLocalizer["Id"]</a>
                        <a class="dropdown-item" href="#">@SharedLocalizer["Name"]</a>
                        <a class="dropdown-item" href="#">@SharedLocalizer["Tags"]</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">@Localizer["Additional fields"]</a>
                    </div>
                </li>
            </ul>
            <input class="form-control mr-sm-2" type="search"
                   placeholder="@Localizer["Search by name"]" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
                <img src="~/bootstrap-icons/icons/search.svg" />
            </button>
        </div>
    </nav>
    <table id="data-table" class="table table-striped table-bordered nowrap" width="80%">
        <thead>
            <tr>
                <th><input name="select_all" value="1" type="checkbox"> @Localizer["Select all"]</th>
                <th>@SharedLocalizer["Name"]</th>
                <th>@SharedLocalizer["Tags"]</th>
                @{
                    foreach (var e in Model.AdditionalFieldsNames)
                    {
                        <th>@e</th>
                    }
                }
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>
                        <input type="checkbox" asp-for="@Model.Selected[i]" />
                    </td>
                    <td>@Model.Items[i].Name</td>
                    <td>@Model.Items[i].Tags</td>
                    @{
                        manager = new FieldManager(Model.Items[i]);
                    }
                    @foreach (var j in Model.AdditionalFieldsIndexes)
                    {
                        <td>@Html.Raw(manager.GetFieldByIndex(j))</td>
                    }
                </tr>
            }
        </tbody>
    </table>
</form>
@section Scripts{
    <script src="~/js/checkboxes.js"></script>
}
