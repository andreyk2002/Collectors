@using Microsoft.AspNetCore.Mvc.Localization;
@using Collectors.Data.Classes;
@model ItemAddModel;
@inject IViewLocalizer Localizer;
@{

}

<h2 class="text-center m-4">@Localizer["Add items to your collection"]</h2>
<form method="post">
    <input asp-for="@Model.Tags" id="tags" value="@string.Join(',',ViewBag.Tags)"/>
    <div class="mb-5">
        <label asp-for="@Model.Name" class="text-center">@Localizer["Item name"]:</label><br />
        <input asp-for="@Model.Name" type="text" />
    </div>
    <h3>@Localizer["Add some tags for your item"]</h3>
    <input type="text" class="form-control mb-4 text-left" name="input-custom-dropdown"
           placeholder="@Localizer["write tags here"]" value="" />
    <div class="m-3">
        <input asp-for="CollectionId" value="@Model.CollectionId" type="hidden" />
        @{
            if (Model.AdditionalFieldsIndexes != null)
            {
                for (int i = 0; i < Model.AdditionalFieldsNames.Count; i++)
                {
                <input asp-for="@Model.AdditionalFieldsIndexes[i]" 
                       value="@Model.AdditionalFieldsIndexes[i]" type="hidden" />
                <label asp-for="@Model.AdditionalFieldsValues[i]"
                       >@Model.AdditionalFieldsNames[i]
        </label>
                <input asp-for="@Model.AdditionalFieldsValues[i]" type="text" class="m-2" />
                <br />
                    }
                }
            }
    </div>
    <button asp-action="Index" id="createButton" class="btn btn-primary" type="submit">
    @Localizer["Create"]
    </button>
</form>

@section scripts{
    <script src="~/js/tags.js"></script>
}