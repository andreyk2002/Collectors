@using Microsoft.AspNetCore.Mvc.Localization;
@using Collectors.Classes;
@inject IViewLocalizer Localizer;
@{
    ViewData["Title"] = "Home Page";
}
@model StartModel;
<div>
    @await Html.PartialAsync("_SelectLanguagePartial")
    @{
        if (ViewBag.Role != null && ViewBag.Role[0] == "admin")
        {
            <a asp-action="Index" asp-controller="Admin">@Localizer["ManageUsers"]</a>
        }
    }
</div>
<div class="text-center">
    <div id="carouselExampleControls" class="carousel slide bg-info p-4 w-100" data-ride="carousel">
        <h3>Most interesing collections</h3>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="center-block w-auto" src="~/img/coin-collection.jpg" alt="First slide" style="height:300px">
            </div>
            @{
                foreach (var collection in Model.BiggestCollections)
                {
                    if (collection.Image != null)
                    {
                        <div class="carousel-item">
                            <img class="center-block w-auto" src="data:image/jpeg;base64,
                             @(Convert.ToBase64String(collection.Image))"
                                 alt="Second slide" style="height:300px">
                        </div>
                    }
                }
            }
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-6 float-left mt-4 mb-5">
        @{
            foreach (var item in Model.LatestItems)
            {
                <div class="card m-4 bg-info" style="width: 20rem;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Tags</p>
                    </div>
                    <ul class="list-group list-group-flush">
                     
                        @foreach(var value in item.AdditionalFieldsValues)
                        {
                            if (!string.IsNullOrEmpty(value))
                            {
                                <li class="list-group-item">
                                    @Html.Raw(value)
                                </li>
                            }
                        }
                    </ul>
                </div>
            }
        }
    </div>
    <div class="col-md-6 float-right mt-4 mb-5" id="tagsCloud">
        <h4>@Localizer["Search items by tags"]</h4>
        <form asp-action="SearchTags" asp-controller="Home">
            @{
                for (int i = 0; i < Model.Tags.Length; i++)
                {
                    <button type="submit" class="m-1 tags">@Model.Tags[i]</button>
                }
                <input id="tagSearch" type="hidden" name="tag" />
            }
        </form>
    </div>
   
</div>

@section scripts{
    <script src="~/js/tagsCloud.js"></script>
}
